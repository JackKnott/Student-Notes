{% block header %}
    <article class="col-md-12 mt-5">
        <h1 class="cntr">EDITPOST</h1>
    </article>
{% endblock header %}

{% block main %}
    {% set fileUser = -1 %}
    {% for f in file %}
        {% set fileUser = f.user_id %}
    {% endfor %}
    {% if fileUser == userid %}
        {% for note in notes %}
            <form action="#" method="post" role="form" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="f1" class="control-label">Note Name</label>
                    <input type="text" id="f1" name="filename" class="form-control-file" required="required" value="{{note.file_name}}"  maxlength="30" />

                    <label for="f2" class="control-label">Note Description</label>
                    <input type="text" id="f2" name="description" class="form-control-file" required="required" value="{{note.file_description}}" maxlength="100" />

                    <label for="f0" class="control-label">File</label>
                    <input type="file" id="f0" name="update[]" class="form-control-file" required="required" />
                </div>
            <button class="btn btn-primary" type="submit">Update</button>
            </form>
            {% include '@util/message.twig' %}
        {% endfor %}
    {% else %}
        <p>You seem to be on the wrong page.</p>
    {% endif %}
{% endblock main %}


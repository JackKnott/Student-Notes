{#
    If you have a standard header for all (most) pages then put the
    content in the file header.twig. It is included by @util/page.twig by
    default. You then don't need to have a header block either.
#}

{% block header %}
    <article class="col-md-12 mt-5">
        <h1 class="cntr">VIEWDOCUMENT</h1>
    </article>
{% endblock header %}

{% block main %}
    <section class="row">
        <article class="ml-auto col-md-8 mr-auto">
            {% for detail in details %}
                <p>File: '{{detail.file_name}}'</p>
                <p>Downloaded {{detail.downloads}} times</p>
                <p>Module {{detail.module_code}} - {{detail.module_name}}</p>
                <p>Lecture {{detail.date}} - {{detail.lecture_time}}</p>
                <form action="#" method="POST" class="cntr" role="form" enctype="multipart/form-data" form="{{upload.id}}" id="{{upload.id}}">
                    <input type="text" name="documentid" id="{{detail.upload_id}}" value="{{detail.upload_id}}" hidden />
                    <input type="submit" value="Download" id="{{detail.upload_id}}" name="document" />
                </form>
            {% endfor %}
        </article>
    </section>
{% endblock main %}

